# Default target for running the build test outside the Travis CI environment.
all:
	$(MAKE) install
	$(MAKE) script


## Targets for installing build dependencies of the ESP8266 JerryScript target.

# Install tools via apt.
install-apt-get-deps:
	sudo apt-get install make unrar-free autoconf automake libtool gcc g++ gperf \
	flex bison texinfo gawk ncurses-dev libexpat-dev python-dev python python-serial \
	sed git unzip bash help2man wget bzip2 libtool
	pip install --user pyserial


# Fetch and build crosstool-NG with support for Xtensa.
install-xtensa-kx106-gcc:
	wget https://dl.espressif.com/dl/xtensa-lx106-elf-linux64-1.22.0-88-gde0bdc1-4.8.5.tar.gz -O ../xtensa-lx106-elf-linux64-1.22.0-88-gde0bdc1-4.8.5.tar.gz
	cd .. && tar xvfz xtensa-lx106-elf-linux64-1.22.0-88-gde0bdc1-4.8.5.tar.gz

install-esp-open-sdk:
	git clone --recursive https://github.com/pfalcon/esp-open-sdk.git ../esp-open-sdk
	cd ../esp-open-sdk && git checkout 5518fb6116c35a02ccb9a87260bb194a57cb429e
	cd ../esp-open-sdk && make toolchain esptool libhal STANDALONE=n

# Fetch Espressif SDK and Xtensa libraries.
install-esp-open-rtos:
	git clone --recursive https://github.com/SuperHouse/esp-open-rtos.git ../esp-open-rtos
	cd ../esp-open-rtos && git checkout 61d3f5b445cf68881084f3328dba9f75cd1d3b0e

# Perform all the necessary (JerryScript-independent) installation steps.
install: install-apt-get-deps install-esp-open-sdk install-esp-open-rtos

## Targets for building ESP8266 with JerryScript.

# Build the firmware (ESP8266 with JerryScript).
script:
	 PATH=$(CURDIR)/../esp-open-sdk/xtensa-lx106-elf/bin:$$PATH $(MAKE) -f ./targets/esp8266/Makefile.esp8266 RTOS_PATH=$(CURDIR)/../esp-open-rtos
